{
    "name": "@discoveryjs/json-ext",
    "version": "0.5.7",
    "description": "A set of utilities that extend the use of JSON",
    "keywords": [
        "json",
        "utils",
        "stream",
        "async",
        "promise",
        "stringify",
        "info"
    ],
    "author": "Roman Dvornov <rdvornov@gmail.com> (https://github.com/lahmatiy)",
    "license": "MIT",
    "repository": "discoveryjs/json-ext",
    "type": "module",
    "sideEffects": false,
    "browser": {
        ".": "./dist/browser.cjs",
        "./src/stringify-stream": "./src/stringify-stream-browser",
        "./src/text-decoder": "./src/text-decoder-browser"
    },
    "exports": {
        "./package.json": {
            "default": "./package.json"
        },
        "./dist/browser": {
            "default": "./dist/browser.cjs"
        },
        "./dist/browser.mjs": {
            "default": "./dist/browser.mjs"
        },
        "./dist/browser.global": {
            "default": "./dist/browser.global.js"
        },
        ".": {
            "require": "./dist/index.cjs",
            "node": "./dist/index.cjs",
            "import": "./dist/index.mjs",
            "default": "./dist/index.mjs"
        }
    },
    "main": "./src/index",
    "types": "./index.d.ts",
    "scripts": {
        "test": "mocha --reporter progress",
        "lint": "eslint src test",
        "lint-and-test": "npm run lint && npm test",
        "build": "node esbuild.js",
        "test:all": "npm run test && npm run test:dist",
        "test:dist": "npm run test:node && npm run test:browser",
        "test:node": "cross-env MODE=node npm test",
        "test:browser": "cross-env MODE=browser npm test",
        "build-and-test": "npm run build && npm run test:all",
        "coverage": "c8 --reporter=text --reporter=lcovonly npm test",
        "prepublishOnly": "npm run lint && npm test && npm run build-and-test"
    },
    "devDependencies": {
        "esbuild": "^0.20.1",
        "c8": "^9.1.0",
        "chalk": "^5.3.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.0",
        "mocha": "^10.3.0"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "files": [
        "dist",
        "src",
        "index.d.ts"
    ]
}
